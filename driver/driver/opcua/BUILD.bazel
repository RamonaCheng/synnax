cc_library(
    name = "open62541",
    srcs = [
        "open62541/lib/libopen62541.a",
    ],
    hdrs = glob([
        "open62541/include/open62541/*.h",
        "open62541/include/open62541/plugin/*.h",
    ]),
    strip_include_prefix = "open62541/include",
)

cc_library(
    name = "opcua",
    srcs = [
        "factory.cpp",
        "reader.cpp",
        "scanner.cpp",
        "util.cpp",
    ],
    hdrs = [
        "opcua.h",
        "reader.h",
        "scanner.h",
        "util.h",
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":open62541",
        "//client/cpp/synnax",
        "//driver/driver/config",
        "//driver/driver/pipeline",
        "//driver/driver/task",
        "@com_github_google_glog//:glog",
        "@nlohmann_json//:json",
    ],
)

cc_test(
    name = "opcua_test",
    srcs = [
        "mock_server.h",
        "reader_test.cpp",
        "scanner_test.cpp",
    ],
    deps = [
        ":opcua",
        "//driver/driver/testutil",
        "@com_google_googletest//:gtest_main",
    ],
)

cc_binary(
    name = "server",
    srcs = ["server.cpp"],
    deps = [
        ":open62541",
    ],
)

cc_binary(
    name = "client",
    srcs = ["client.cpp"],
    deps = [
        ":open62541",
    ],
)
